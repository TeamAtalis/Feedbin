<p class="mb-4">
  <% if @user.plan.stripe_id == "trial" %>
    <% if @user.days_left <= 0 %>
      Your trial has ended. Subscribe now to continue using Curathor.
    <% else %>
      Your trial period will end in <strong><%= pluralize(@user.days_left, 'day') %></strong>. Subscribe now to continue using Curathor uninterrupted.
    <% end %>
  <% end %>
</p>

<%= render Settings::ControlGroupComponent.new class: "mb-14" do |group| %>
  <% group.header do %>
    Plans
  <% end %>
  <% month = "$5/month" %>
  <% year = "$50/year" %>
  <% group.item do %>
    <%= render Settings::ControlRowComponent.new do |row| %>
      <% row.title do %>
        <%= month %>
      <% end %>
      <% row.control do %>
        <%= button_to "Choose #{month} plan", { controller: "settings/billings", action: "billing_success", plan_id: "monthly" }, method: :get, class: "button" %>
      <% end %>
    <% end %>
  <% end %>
  <% group.item do %>
    <%= render Settings::ControlRowComponent.new do |row| %>
      <% row.title do %>
        <%= year %>
      <% end %>
      <% row.control do %>
        <%= button_to "Choose #{year} plan", { controller: "settings/billings", action: "billing_error", plan_id: "yearly" }, method: :get, class: "button" %>
      <% end %>
    <% end %>
  <% end %>  
<% end %>